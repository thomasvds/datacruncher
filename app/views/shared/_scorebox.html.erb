<div class="panel panel-<%= metric_range %>">
  <div class="panel-heading" style="height: 75px;">
    <div class="row">
      <div class="col-xs-3">
        <%= image_tag "#{icon_name}.png", class: 'scoreboxicon' %>
      </div>
      <div class="col-xs-9 text-right">
        <div class="huge"><%= current_metric %></div>
        <div><%= raw(metric_description) %></div>
      </div>
    </div>
  </div>
  <div class="panel-footer">
    <span class="pull-left">Previous week: <%= last_metric %> &nbsp; <i class="fa fa-arrow-circle-<%= metric_trend %>"></i></span>
    <span class="pull-right info"><i data-toggle="modal" data-target=".<%= icon_name %>" class="fa fa-info-circle" style="cursor: pointer;"></i></span>
    <div class="clearfix"></div>
  </div>
</div>

<%= render 'shared/infomodal', id: icon_name, message: raw(metric_explanation) %>
