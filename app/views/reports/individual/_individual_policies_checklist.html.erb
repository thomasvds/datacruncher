<div class="individual-policies-checklist">
  <div class="total-score">
    <div class="label label-<%=score_range%>">
      Last week score: <%= score %> %
    </div>
  </div>
  <div class="checks">
    <ul class="fa-ul">
      <% policies_check_list.each do |name, enforced| %>
      <li>
        <% if enforced %>
        <i class="fa-li fa fa-check-circle good"></i>
        <% else %>
        <i class="fa-li fa fa-times-circle danger"></i>
        <% end %>
        <%= name %>
      </li>
      <% end %>
    </ul>
  </div>
</div>

