<!-- /.row -->
<div class="row">
<% data.each do |key, value| %>
  <div class="col-lg-3 col-md-6">
    <div class="panel panel-<%= key %>">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <% icon_name = key + '-icon.png' %>
            <%= image_tag icon_name, class: 'scoreboxicon' %>
          </div>
          <div class="col-xs-9 text-right">
            <div class="huge"><%= value['last_week_count'] %></div>
            <div>People in "<%= key %>" zone</div>
          </div>
        </div>
      </div>
      <a href="#">
        <div class="panel-footer">
          <span class="pull-left">Previous: <%= value['week_before_last_count'] %></span>
          <span class="pull-right"><i class="fa fa-arrow-circle-<%= value['evolution'] %>"></i></span>
          <div class="clearfix"></div>
        </div>
      </a>
    </div>
  </div>
  <% end %>
</div>
