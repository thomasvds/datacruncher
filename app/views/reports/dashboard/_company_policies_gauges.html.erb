<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <button type="button" class="btn btn-xs btn-default" data-toggle="modal" data-target=".policies-modal"><i class="fa fa-info-circle fa-1x"></i></button>
      &nbsp; What are the company-wide drivers of sustainability?
    </div>
  </div>
  <div class="panel-body" style="padding-left: 50px; padding-top: 0px; padding-bottom: 0px;">
    <div class="container">
      <div class="row">
        <!-- <div class="col-xs-1">
        </div> -->
        <% policies.each do |k, v| %>
        <div class="col-xs-2">
          <% chart_id = k %>
          <%= render 'charts/policy_gauge', chart_id: chart_id, policy: v["name"], value: v["score"], weight: v["weight"], title_suffix: "%", sub_title: "of employees" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/infomodal', id: "policies-modal", message: "These gauges show what percentage of employees have benefitted from the company sustainability policies, for each policy." %>
